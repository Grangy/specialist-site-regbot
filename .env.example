# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Authorization
BOT_PASSWORD=your_bot_password_here

# Admin (ID администратора для регистрации без подтверждения)
ADMIN_ID=your_admin_telegram_id_here

# Notifications (ID группы для уведомлений)
NOTIFICATION_GROUP_ID=-1003421862306

# Create LK API (для подтверждения регистраций)
CREATE_LK_API_URL=https://your-api-url.com/create_lk_api.php
CREATE_LK_API_TOKEN=your_secret_token_here

# Reset Password API (для сброса паролей)
RESET_PASSWORD_API_URL=https://your-api-url.com/reset_password_api.php
RESET_PASSWORD_API_TOKEN=your_secret_token_here

# Customers API (для получения всех клиентов из БД сайта)
CUSTOMERS_API_URL=https://your-api-url.com/getAllCustomersApi.php
CUSTOMERS_API_TOKEN=your_secret_token_here

# API Configuration
API_URL=https://your-api-url.com/api.php/endpoint
API_ACCESS_TOKEN=your_api_access_token_here

# Database
DATABASE_PATH=./data/users.db

# Clients Data
CLIENTS_JSON_PATH=./data/clients.json

# Bot Settings
MAX_SEARCH_RESULTS=5
SESSION_TIMEOUT=1800000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bot.log



