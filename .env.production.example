# Production Environment Configuration
# Скопируйте этот файл в .env на production сервере
# и заполните реальными данными

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_production_bot_token

# Authorization
BOT_PASSWORD=your_strong_password_here

# Notifications (ID группы для уведомлений)
NOTIFICATION_GROUP_ID=-1003421862306

# API Configuration
API_URL=https://specialist82.pro/api.php/shop.customer.add
API_ACCESS_TOKEN=your_production_api_token

# Database
DATABASE_PATH=./data/users.db

# Clients Data
CLIENTS_JSON_PATH=./data/clients.json

# Bot Settings
MAX_SEARCH_RESULTS=5
SESSION_TIMEOUT=1800000

# Logging (в production ставьте warn или error)
LOG_LEVEL=warn
LOG_FILE=./logs/bot.log

# Node Environment
NODE_ENV=production

